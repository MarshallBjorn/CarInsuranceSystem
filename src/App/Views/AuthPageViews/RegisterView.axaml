<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Views.AuthPageViews.RegisterView"
             x:DataType="vm:AuthPageViewModels.RegisterViewModel">

  <StackPanel>
    <TextBlock Text="Register account"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold" />
    <TextBlock Text="{Binding MessageText}"
               HorizontalAlignment="Center"
               FontSize="18"
               Foreground="Red" />

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="10">
      <StackPanel Grid.Column="0">
        <StackPanel>
          <TextBlock Text="Email" 
                     Margin="0 10 5 0"  
                     FontSize="18"
                     HorizontalAlignment="Center" />
            <TextBox Watermark="e.g. john@doe.email.com" 
                  Text="{Binding Email, Mode=TwoWay}" 
                  Margin="0 2"
                  Width="300"
                  FontSize="20"
                  HorizontalAlignment="Center" />
          <TextBlock Text="{Binding EmailErrors}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>

        <StackPanel>
          <TextBlock Text="First name"
                     Margin="0 10 5 0" 
                     HorizontalAlignment="Center"
                     FontSize="18" />
          <TextBox Watermark="John" 
                  Text="{Binding Firstname, Mode=TwoWay}" 
                  Margin="0 2"
                  Width="300"
                  FontSize="20"
                  HorizontalAlignment="Center" />
          <TextBlock Text="{Binding FirstNameErrors}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Last name" 
                     Margin="0 10 5 0" 
                     HorizontalAlignment="Center"
                     FontSize="18" />
          <TextBox Watermark="Doe" 
                  Text="{Binding Lastname, Mode=TwoWay}" 
                  Margin="0 2"
                  Width="300"
                  FontSize="20"
                  HorizontalAlignment="Center" />
          <TextBlock Text="{Binding LastNameErrors}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>
      </StackPanel>

      <StackPanel Grid.Column="1">
        <StackPanel>
          <TextBlock Text="Password" 
                     Margin="0 10 5 0" 
                     HorizontalAlignment="Center"
                     FontSize="18" />
          <TextBox Watermark="abc1!@2$" 
                  Text="{Binding Password1, Mode=TwoWay}"
                  PasswordChar="•" 
                  Margin="0 2"
                  Width="300"
                  FontSize="20"
                  HorizontalAlignment="Center" />
          <TextBlock Text="{Binding PasswordErrors1}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Repeat password" 
                     Margin="0 10 5 0"
                     HorizontalAlignment="Center"
                     FontSize="18" />
          <TextBox Watermark="abc1!@2$"
                  Text="{Binding Password2, Mode=TwoWay}"
                  PasswordChar="•"
                  Margin="0 2"
                  Width="300"
                  FontSize="20"
                  HorizontalAlignment="Center" />
          <TextBlock Text="{Binding PasswordErrors2}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>

        <StackPanel>
          <TextBlock Text= "Birth date" 
                     Margin="0 10 5 0"
                     HorizontalAlignment="Center" 
                     FontSize="18"/>
          <DatePicker SelectedDate="{Binding BirthDate, Mode=TwoWay}" 
                      ZIndex="1"
                      Margin="0 2"
                      Width="300"
                      FontSize="20"
                      HorizontalAlignment="Center"/>
          <TextBlock Text="{Binding DateErrors}"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    FontSize="18" />
        </StackPanel>
      </StackPanel>
    </Grid>
    <Button Command = "{Binding RegisterCommand}" 
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Width="200"
            Height="50"
            Content="REGISTER"/>
  </StackPanel>
</UserControl>
